<div class="container text-center">

    <div class="jumbotron text-center">
        <h1>Eat! That! BURGER!</h1>
    </div>

<h1>Add a Burger</h1>
<form class="create-form">

  <div class="form-group">
    <label for="new-burger">Burger:</label>
    <input type="text" id="new-burger" name="burger_name">
  </div>
<br>
  <button type="submit">Add new burger</button>
</form>
<br>

<h1>Burgers!</h1>

<h2>Burgers waiting to be devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>{{id}}. {{burger_name}}
        <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
          {{#if devoured}}devoured!{{else}}devour me!{{/if}}
        </button></span>
      </p>
    {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{id}}. {{burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>
</div>